{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Node list</h1>

    <table  summary="dsf" class="records_list table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Info</th>
                <th>Description</th>
                <th>Sort</th>
                <th>Slug</th>
                <th>Meta_title</th>
                <th>Meta_description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_node_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.info }}</td>
                <td>{{ entity.description|raw }}</td>
                <td>{{ entity.sort }}</td>
                <td>{{ entity.slug }}</td>
                <td>{{ entity.metatitle }}</td>
                <td>{{ entity.metadescription }}</td>
                <td>
                <ul class="list-inline">
                    <li>
                        <a title="Открыть" href="{{ path('admin_node_show', { 'id': entity.id }) }}"><i class="fa fa-file-text"></i></a>
                    </li>
                    <li>
                        <a title="Редактировать" href="{{ path('admin_node_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil-square-o"></i></a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_node_new') }}">
                Добавить запись
            </a>
        </li>
    </ul>
    {% endblock %}
